{
  "name": "@lean-format/core",
  "version": "1.0.1",
  "description": "LEAN (Lightweight Efficient Adaptive Notation) - A minimal, human-readable data interchange format",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js",
      "default": "./src/index.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\"",
    "prepublishOnly": "npm run build && npm test",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "lean",
    "format",
    "data",
    "notation",
    "parser",
    "serializer",
    "json",
    "yaml",
    "csv",
    "interchange",
    "compact",
    "human-readable"
  ],
  "author": "LEAN Format Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lean-format/lean-v1.git"
  },
  "bugs": {
    "url": "https://github.com/lean-format/lean-v1/issues"
  },
  "homepage": "https://lean-format.github.io/lean-v1/",
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.5",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "eslint": "^8.42.0",
    "jest": "^29.7.0",
    "jest-jasmine2": "^30.2.0",
    "jsdoc": "^4.0.0",
    "prettier": "^2.8.0",
    "rollup": "^3.25.0",
    "cross-env": "^7.0.3"
  }
}