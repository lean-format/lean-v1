{
  "name": "@lean/core",
  "version": "1.0.0",
  "description": "LEAN (Lightweight Efficient Adaptive Notation) - A minimal, human-readable data interchange format",
  "main": "src/index.js",
  "module": "src/index.js",
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\"",
    "prepublishOnly": "npm run build && npm test",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "lean",
    "format",
    "data",
    "notation",
    "parser",
    "serializer",
    "json",
    "yaml",
    "csv",
    "interchange",
    "compact",
    "human-readable"
  ],
  "author": "LEAN Format Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lean-format/lean-js.git"
  },
  "bugs": {
    "url": "https://github.com/lean-format/lean-js/issues"
  },
  "homepage": "https://leanformat.org",
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "jsdoc": "^4.0.0",
    "prettier": "^2.8.0",
    "rollup": "^3.25.0"
  }
}
