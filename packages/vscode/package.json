{
  "name": "lean-format-vscode",
  "displayName": "LEAN Format Support",
  "description": "Syntax highlighting and language support for LEAN (Lightweight Efficient Adaptive Notation) format",
  "version": "1.0.0",
  "author": "LEAN Format Team",
  "publisher": "lean-format",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lean-format/lean-v1.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "lean",
    "data",
    "format",
    "notation",
    "syntax"
  ],
  "activationEvents": [
    "onLanguage:lean"
  ],
  "contributes": {
    "languages": [
      {
        "id": "lean",
        "aliases": [
          "LEAN",
          "lean"
        ],
        "extensions": [
          ".lean"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/icon-light.png",
          "dark": "./images/icon-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "lean",
        "scopeName": "source.lean",
        "path": "./syntaxes/lean.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "lean",
        "path": "./snippets/lean.json"
      }
    ],
    "configurationDefaults": {
      "[lean]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.detectIndentation": true,
        "editor.formatOnSave": false
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node build.js",
    "watch": "node build.js --watch",
    "package": "npm run compile -- --production",
    "package:vsix": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "test": "echo \"VS Code extension - no automated tests\" && exit 0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "vsce": "^2.15.0",
    "esbuild": "^0.24.0",
    "@lean-format/core": "^1.0.0"
  }
}